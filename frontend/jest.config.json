{
	"transform": {
		"^.+\\.svelte$": [
			"svelte-jester",
			{
				"rootMode": "upward",
				"preprocess": true
			}
		],
		"^.+\\.ts$": "ts-jest"
	},
	"moduleFileExtensions": [
		"js",
		"ts",
		"svelte"
	],
	"testEnvironment": "jsdom",
	"setupFilesAfterEnv": [
		"@testing-library/jest-dom/extend-expect"
	],
	"coverageProvider": "v8",
	"coverageReporters": [
		"text",
		"cobertura"
	]
}